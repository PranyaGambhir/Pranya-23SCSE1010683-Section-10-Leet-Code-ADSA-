class Solution {
    public List<String> letterCombinations(String digits) {
        List<String> result = new ArrayList<>();
        if (digits == null || digits.length() == 0) {
            return result;
        }
        String[] KEYPAD = {
            "",    // 0
            "",    // 1
            "abc", // 2
            "def", // 3
            "ghi", // 4
            "jkl", // 5
            "mno", // 6
            "pqrs",// 7
            "tuv", // 8
            "wxyz" // 9
        };
        backtrack(result, new StringBuilder(), digits, 0, KEYPAD);
        return result;
    }

    private void backtrack(List<String> result, StringBuilder current, String digits, int index, String[] KEYPAD) {
        // Base case: if we have formed a complete combination
        if (index == digits.length()) {
            result.add(current.toString());
            return;
        }

        String letters = KEYPAD[digits.charAt(index) - '0'];
        for (char c : letters.toCharArray()) {
            current.append(c); // choose
            backtrack(result, current, digits, index + 1, KEYPAD); 
            current.deleteCharAt(current.length() - 1); 
        }
    }
}
