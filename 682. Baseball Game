class Solution {
    public int calPoints(String[] operations) {
        Stack<Integer> st = new Stack<>();
        for (String s : operations) {
            if (s.equals("+")) {
                int x = st.pop();
                int y = st.peek();
                st.push(x);
                st.push(x + y);
            } else if (s.equals("D")) {
                st.push(st.peek() * 2);
            } else if (s.equals("C")) {
                st.pop();
            } else {
                st.push (Integer.parseInt(s));
            }
        }
        int sum = 0;
        for (int x : st) sum += x;
        return sum;
    }
}
