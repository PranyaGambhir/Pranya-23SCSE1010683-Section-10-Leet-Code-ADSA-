class Solution {
    public int myAtoi(String s) {
        if (s == null) return 0;                // if null input, return 0
        int i = 0;
        int n = s.length();

        while (i < n && s.charAt(i) == ' ') i++;

        if (i == n) return 0;

        int sign = 1;
        char ch = s.charAt(i);
        if (ch == '+' || ch == '-') {
            if (ch == '-') sign = -1;
            i++;
        }

        while (i < n && s.charAt(i) == '0') i++;

        int result = 0;
        while (i < n) {
            char c = s.charAt(i);
            if (c < '0' || c > '9') break;    

            int digit = c - '0';

            
            if (result > (Integer.MAX_VALUE - digit) / 10) {
                return (sign == 1) ? Integer.MAX_VALUE : Integer.MIN_VALUE;
            }

            result = result * 10 + digit;
            i++;
        }

        return sign * result;
    }
}
    
